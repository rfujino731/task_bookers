<h1 class = "edit">Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

	<h4 class = "edit">title</h4>
		<% if @book.errors.messages[:title].any? %>
		<span class="error"><%= @book.errors.messages[:title] %></span>
		<% end %>
	<div class = "edit"><%= f.text_field :title %></div>


	<h4 class = "edit">body</h4>
		<% if @book.errors.messages[:body].any? %>
		<span class="error"><%= @book.errors.messages[:body] %></span>
		<% end %>
	<div class = "edit"><%= f.text_area :body %></div>

	<div class = "edit"><%= f.submit 'Update Book' %></div>
<% end %>
<p class = "edit">
<%=link_to "show", book_path(@book.id) %> | <%=link_to "back", books_path %>
</p>
