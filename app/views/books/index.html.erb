<div class = "books_header">
	<h1 class = "books_title">Books</h1>
</div>
<table class = "books_table">
	<tr class = "books_table_item">
		<th class = "books_table_title">title</th>
		<th class = "books_table_body">body</th>
		<th class = "books_table_show">show</th>
		<th class = "books_table_edit">edit</th>
		<th class = "books_table_destroy">destroy</th>
	</tr>

	<% @books.each do |book| %>
	<tr class = "books_table_date">
		<th><%= book.title %></th>
		<th><%= book.body %></th>
		<th>show</th>
		<th>edit</th>
		<th>destory</th>
	</tr>
	<% end %>

</table>

<h2 class = "new_title">new book</h2>
<div class = "new_main">
	<%= form_for(@book) do |f| %>

		<h4>title</h4>
		<%= f.text_field :title %>

		<h4>body</h4>
		<!-- <textarea name="body" rows="5" cols="22"> -->
		<%= f.text_area :body %>
	    <!-- </textarea> -->
		<br>
		<%= f.submit 'Create Book' %>
	<% end %>
</dev>